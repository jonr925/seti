<h1>Assignment <%= @assignment.id%></h1>

<p id="notice"><%= notice %></p>

<p>
  <b>Observation range:</b>
  <%= link_to @assignment.observation_range.friendly_name, @assignment.observation_range %>
</p>

<p>
  <b>User:</b>
  <%= @assignment.user.name %>
</p>

<p>
  <b>Status:</b>
  <%= @assignment.status %>
</p>

<p>
  <b>Friendly Name:</b>
    <%= @assignment.friendly_name %>
  </p>

<p><b>Created: </b><%=time_since(@assignment.created_at)%></p> 


<%= link_to 'Edit', edit_assignment_path(@assignment) %> |
<%= link_to 'Back', assignments_path %>
