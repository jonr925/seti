<h1>User <%= @user.id%></h1>

<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @user.name %>
</p>

<p>
  <b>Provider</b>
  <%= @user.provider %>
</p>

<p>
  <b>UID</b>
  <%= @user.uid %>
</p>

<p>
  <b>Role</b>
  <%= @user.friendly_role %>
</p>

<p>
  <b>Email</b>
  <%= @user.email %>
</p>

<p>
  <b>Created</b>
  <%=time_since(@user.created_at)%>
</p>






<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
