<h1><%=User.count%> Users</h1>


<%= paginate @users %>

<table>
  <tr>
    <th>Name</th>
    <th>Provider</th>
    <th>Role</th>
    <th>Email</th>
    <th>Actions</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.provider %></td>
    <td><%= user.friendly_role %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user %> <%= link_to 'Edit', edit_user_path(user) %> <%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
