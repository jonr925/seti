<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Provider</th>
    <th>UID</th>
    <th>Role</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.name %></td>
    <td><%= user.provider %></td>
    <td><%= user.uid %></td>
    <td><%= user.friendly_role %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

