
<h1>Target <%= @target.id%></h1>

<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @target.name %>
</p>

<p>
  <b>Description:</b>
  <%= @target.description %>
</p>

<p>
  <b>Right ascension:</b>
  <%= @target.right_ascension %>
</p>

<p>
  <b>Declination:</b>
  <%= @target.declination %>
</p>

<b><%= @target.observations.count%> Observations</b>
<table>
  <tr>
    <th>Date</th>
    <th>Base URL</th>
    <th>Actions</th>
  </tr>
<% @target.observations.each do |observation| %>
  <tr>
    <td><%= observation.date %></td>
    <td><%= observation.base_url%></td>
    <td><%= link_to 'Show', observation %></td>
  </tr>
<%end%>
</table>

<%= link_to 'Edit', edit_target_path(@target) %> |
<%= link_to 'Back', targets_path %>
