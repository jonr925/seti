<?xml version="1.0" encoding="utf-8"?>
<s:ViewNavigatorApplication xmlns:fx="http://ns.adobe.com/mxml/2009" 
							xmlns:s="library://ns.adobe.com/flex/spark"
							firstView="com.hg94.seti.views.FirstSplashView">
	<fx:Declarations>
		<!-- 
		Place non-visual elements (e.g., services, value objects) here 
		-->
	</fx:Declarations>
	<s:creationComplete>
		<![CDATA[
		
		this.systemManager.stage.setAspectRatio(StageAspectRatio.LANDSCAPE);
		
		if(Capabilities.cpuArchitecture=="ARM")
		{
			NativeApplication.nativeApplication.addEventListener(Event.ACTIVATE, handleActivate, false, 0, true);
			NativeApplication.nativeApplication.addEventListener(Event.DEACTIVATE, handleDeactivate, false, 0, true);
			NativeApplication.nativeApplication.addEventListener(KeyboardEvent.KEY_DOWN, handleKeys, false, 0, true);
		}
		]]>
	</s:creationComplete>
	<fx:Script>
		<![CDATA[
			
			/**
			 * Flex 4.5 i6 Hero SDK reference and documentation can be found here:
			 * http://opensource.adobe.com/wiki/display/flexsdk/Hero
			 * 
			 * 
			 * Might be interesting to possibly implement one of these:
			 * http://opensource.adobe.com/wiki/display/flexsdk/Mobile+Splash+Screen
			 * http://opensource.adobe.com/wiki/display/flexsdk/Busy+Indicator
			 * 
			 * 
			 * The docs on view transitions, for switching between views:
			 * http://opensource.adobe.com/wiki/display/flexsdk/View+Transitions
			 */
			
			private function handleActivate(event:Event):void
			{
				NativeApplication.nativeApplication.systemIdleMode = SystemIdleMode.KEEP_AWAKE;
			}
			
			private function handleDeactivate(event:Event):void
			{
				NativeApplication.nativeApplication.exit();
			}
			
			// This was a bit too aggressive, disabled for now.
			private function handleKeys(event:KeyboardEvent):void
			{
				return;
				
				if(event.keyCode == Keyboard.BACK)
					NativeApplication.nativeApplication.exit();
			}
		]]>
	</fx:Script>
</s:ViewNavigatorApplication>
