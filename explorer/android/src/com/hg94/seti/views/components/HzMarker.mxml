<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		xmlns:s="library://ns.adobe.com/flex/spark">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			
			[Bindable]
			protected var _label:String="";
			public function set label(value:String):void{
				_label = value;
			}
			public function get label():String{
				return _label;
			}
		]]>
	</fx:Script>
	<s:layout>
		<s:VerticalLayout horizontalAlign="center" verticalAlign="middle" />
	</s:layout>
	<s:Graphic id="triangle" height="20" width="20">
		<s:Line xFrom="{triangle.width/2}" xTo="{triangle.width}" yFrom="0" yTo="{triangle.height}" >
			<s:stroke>
				<s:SolidColorStroke color="#000000" weight="1"/>
			</s:stroke>	
		</s:Line>
		<s:Line xFrom="0" xTo="{triangle.width}" y="{triangle.height}" >
			<s:stroke>
				<s:SolidColorStroke color="#000000" weight="1"/>
			</s:stroke>	
		</s:Line>
		<s:Line xFrom="{triangle.width/2}" xTo="0" yFrom="0" yTo="{triangle.height}" >
			<s:stroke>
				<s:SolidColorStroke color="#000000" weight="1"/>
			</s:stroke>		
		</s:Line>
	</s:Graphic>
	<s:Label text="{_label + ' MHz'}" />
</s:Group>
